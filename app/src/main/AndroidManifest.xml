<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    package="com.finance.creditcard">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="test.db.sql.financecredits.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="test.db.sql.financecredits.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="test.db.sql.financecredits.RequestActivity"
            android:parentActivityName="test.db.sql.financecredits.MainActivity"
            android:theme="@style/AppTheme"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="test.db.sql.financecredits.ThanksActivity"
            android:parentActivityName="test.db.sql.financecredits.MainActivity"
            android:theme="@style/AppTheme"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="test.db.sql.financecredits.DescriptionActivity"
            android:parentActivityName="test.db.sql.financecredits.MainActivity"
            tools:targetApi="jelly_bean" />
        <activity
            android:name="test.db.sql.financecredits.AboutActivity"
            android:parentActivityName="test.db.sql.financecredits.MainActivity"
            tools:targetApi="jelly_bean" />
        <activity android:name="test.db.sql.financecredits.PrivacyActivity"
            android:parentActivityName="test.db.sql.financecredits.MainActivity"
            tools:targetApi="jelly_bean"/>
    </application>

</manifest>